<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:LeagueCloudCoachDesktop.Styles">
    <!-- Material design palette -->
    <!-- primary -->
    <SolidColorBrush x:Key="PrimaryHueLightBrush" Color="#B3E5FC"/>
    <SolidColorBrush x:Key="PrimaryHueLightForegroundBrush" Color="#FFFFFF"/>

    <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#03A9F4"/>
    <SolidColorBrush x:Key="PrimaryHueMidForegroundBrush" Color="#FFFFFF"/>

    <SolidColorBrush x:Key="PrimaryHueDarkBrush" Color="#0288D1"/>
    <SolidColorBrush x:Key="PrimaryHueDarkForegroundBrush" Color="#FFFFFF"/>

    <!-- accent -->
    <SolidColorBrush x:Key="SecondaryAccentBrush" Color="#4CAF50"/>
    <SolidColorBrush x:Key="SecondaryAccentForegroundBrush" Color="#FFFFFF"/>
    
    <!-- Custom colors -->
    <SolidColorBrush x:Key="DefaultApplicationBackgroundWhiteSmoke" Color="#f5f5f5"/>
    <SolidColorBrush x:Key="White" Color="White"/>
    <SolidColorBrush x:Key="SeperatorGrey" Color="#bdbdbd"/>

</ResourceDictionary>